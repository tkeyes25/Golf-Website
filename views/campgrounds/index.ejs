<% include ../partials/header %>

<div class="container">
    
    <header class="jumbotron">
        <div class="container"></div>
            <h1>Welcome to YelpCamp</h1>
            <p>Check out the hidden secret campsites all over the world</p>
            <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a></p>
        </div>
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campsite) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campsite.image %>" alt="New campground image had incorrect URL">
                    <div class="caption">
                        <h4><%= campsite.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campsite._id %>" class="btn btn-info">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
        
    <% include ../partials/footer %>
    
</div>